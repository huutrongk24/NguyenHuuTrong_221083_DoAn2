    <div class="d-flex">

        @if (User.Identity.IsAuthenticated)
        {
            <!-- SIDEBAR -->
            <div class="bg-dark text-white p-3" style="width:260px; min-height:100vh;">
                <h4 class="text-center mb-4">Quản Lý Hiệu Suất</h4>

                <ul class="nav flex-column">

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white"
                               asp-controller="Dashboard"
                               asp-action="Index">📊 Dashboard</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white"
                               asp-controller="User"
                               asp-action="Index">👤 Quản lý User</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white"
                               asp-controller="Departments"
                               asp-action="Index">🏢 Phòng Ban</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white"
                               asp-controller="Employees"
                               asp-action="Index">👨‍💼 Nhân viên</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white"
                               asp-controller="KPIs"
                               asp-action="Index">📈 KPI</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white"
                               asp-controller="Projects"
                               asp-action="Index">📁 Dự án</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white"
                               asp-controller="TaskItems"
                               asp-action="Index">📝 Công việc</a>
                        </li>
                    }

                    <li class="nav-item mb-2">
                        <a class="nav-link text-white"
                           asp-controller="MyTasks"
                           asp-action="Index">✅ Công việc của tôi</a>
                    </li>

                    <hr class="text-secondary" />

                    <li class="nav-item mb-2">
                        <span class="text-light">
                            Xin chào<br />
                            <strong>@User.Identity.Name</strong>
                        </span>
                    </li>

                    <li class="nav-item mt-3">
                        <form asp-area="Identity"
                              asp-page="/Account/Logout"
                              method="post">
                            <button type="submit" class="btn btn-danger w-100">
                                🚪 Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        }

        <!-- CONTENT -->
        <div class="flex-fill p-4">
            @RenderBody()
        </div>

    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>