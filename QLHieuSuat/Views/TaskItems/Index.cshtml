@model IEnumerable<QLHieuSuat.Models.TaskItem>

@{
    ViewData["Title"] = "Quản lý Công việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quản lý Công việc</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên công việc</th>
            <th>Mô tả</th>
            <th>Độ khó</th>
            <th>Tiến độ (%)</th>
            <th>Bắt đầu</th>
            <th>Kết thúc</th>
            <th>Dự án</th>
            <th>Nhân viên được giao</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Difficulty</td>
                <td>@item.ProgressPercent</td>
                <td>@item.StartDate?.ToString("dd/MM/yyyy")</td>
                <td>@item.EndDate?.ToString("dd/MM/yyyy")</td>
                <td>@item.Project?.Name</td>

                <!-- HIỂN THỊ DANH SÁCH NHÂN VIÊN -->
                <td>
                    @if (item.TaskAssignments != null && item.TaskAssignments.Any())
                    {
                        foreach (var assign in item.TaskAssignments)
                        {
                            <span class="badge bg-info text-dark">
                                @assign.Employee.FullName
                            </span>
                            <br />
                        }
                    }
                    else
                    {
                        <span class="text-danger">Chưa giao</span>
                    }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                    <a asp-action="Assign" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Giao việc</a>
                </td>
            </tr>
        }
    </tbody>
</table>